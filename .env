# Vite开发服务器URL，用于前端资源热重载
VITE_DEV_SERVER_URL=http://localhost:5173

# 应用基础配置
APP_NAME=客户数据库管理门户      # 应用名称，显示在各处界面和邮件中
APP_ENV=local                  # 应用环境(local开发环境，production生产环境)
APP_KEY=base64:REZL13CYoEcWD4xSNVPTUEbo3FCsTR2883BEnirIgMI=  # 应用密钥，用于加密会话等
APP_DEBUG=true                 # 是否开启调试模式，生产环境应设为false
APP_URL=http://localhost:8000  # 应用URL，用于生成链接和资源路径

# 日志配置
LOG_CHANNEL=stack             # 日志通道，stack表示组合多个通道
LOG_DEPRECATIONS_CHANNEL=null # 弃用警告日志通道，null表示使用默认通道
LOG_LEVEL=debug               # 日志级别，可选: debug, info, notice, warning, error, critical, alert, emergency

# 数据库配置
DB_CONNECTION=mysql           # 数据库连接类型
DB_HOST=8.138.88.79           # 数据库主机地址
DB_PORT=3306                  # 数据库端口
DB_DATABASE=laravel           # 数据库名称
DB_USERNAME=laravel           # 数据库用户名
DB_PASSWORD=xAcFeKTsfP4TjWCw  # 数据库密码

# 广播、缓存、文件系统和队列配置
BROADCAST_DRIVER=log          # 广播驱动，用于WebSocket等实时功能
CACHE_DRIVER=file             # 缓存驱动，可选: file, redis, memcached等
FILESYSTEM_DISK=local         # 默认文件系统磁盘
QUEUE_CONNECTION=sync         # 队列连接，sync为同步执行，生产环境建议用redis或database
SESSION_DRIVER=file           # 会话驱动
SESSION_LIFETIME=120          # 会话生命周期，单位为分钟

# Memcached配置
MEMCACHED_HOST=127.0.0.1      # Memcached服务器地址

# Redis配置
