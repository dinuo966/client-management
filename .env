MAIL_HOST=smtp.qiye.aliyun.com # SMTP服务器地址
MAIL_PORT=465                 # SMTP端口
MAIL_USERNAME=email@weilai.red # SMTP用户名
MAIL_PASSWORD=zq533124!       # SMTP密码
MAIL_ENCRYPTION=ssl           # 加密方式，可选: tls, ssl
